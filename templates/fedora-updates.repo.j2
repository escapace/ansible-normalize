[fedora-updates]
name=Fedora 35 - $basearch - Updates
#baseurl=http://download.example/pub/fedora/linux/updates/35/Everything/$basearch/
metalink=https://mirrors.fedoraproject.org/metalink?repo=updates-released-f35&arch=$basearch
enabled=1
countme=1
repo_gpgcheck=0
type=rpm
gpgcheck=1
metadata_expire=6h
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-fedora-35-$basearch
skip_if_unavailable=False
priority=100

[fedora-updates-source]
name=Fedora 35 - Updates Source
#baseurl=http://download.example/pub/fedora/linux/updates/35/Everything/SRPMS/
metalink=https://mirrors.fedoraproject.org/metalink?repo=updates-released-source-f35&arch=$basearch
enabled=0
repo_gpgcheck=0
type=rpm
gpgcheck=1
metadata_expire=6h
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-fedora-35-$basearch
skip_if_unavailable=False
priority=100
